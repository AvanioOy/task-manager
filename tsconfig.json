{
	"compilerOptions": {
		"module": "commonjs",
		"target": "es2021",
		"lib": [
			"es2021"
		],
		"rootDir": "./src",
		"outDir": "./dist",
		"moduleResolution": "node",
		"sourceRoot": "./src",
		"types": [
			"node"
		],
		"declaration": true,
		"removeComments": false,
		"inlineSources": true,
		"inlineSourceMap": true,
		"forceConsistentCasingInFileNames": true,
		"noImplicitReturns": true,
		"noImplicitThis": true,
		"noImplicitAny": true,
		"importHelpers": true,
		"strictNullChecks": true,
		"suppressImplicitAnyIndexErrors": true,
		"noUnusedLocals": true,
		"useUnknownInCatchVariables": true,
		"strict": true,
	},
	"exclude": [
		"test/*",
		"dist/*",
		"node_modules/*"
	]
}